{% extends 'base.html.twig' %}

{% block title %}
    Espace Membre
{% endblock title %}

{% block body %}
    <div class="container">
        <hr>
        <h1>Bienvenue dans votre espace membre</h1>
        <hr>

        <div>
            <h2>Informations sur votre Compte : </h2>
            <hr>
            <h5>Nom d'utilisateur : {{ collections.user.username }}</h5>
            <p><strong>Date de création du compte : </strong> {{ collections.user.creationDate.date|date("d/m/y") }}</p>
            <p><strong>Email</strong> : {{ collections.user.email }} <a href="{{ path('changeEmail') }}" class="btn btn-outline-primary btn-sm">Modifier</a> </p>
            <a class="btn btn-primary" href="{{ path('changePassword') }}">
                Changer le mot de passe
            </a>
        </div>

        <hr>
        <div>
            <h2>Aperçu de vos Collections</h2>

            {% for category,value in collections.count %}
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ category }}
                    <span class="badge badge-primary badge-pill">{{ value }}</span>
                </li>
            </ul>
            {% endfor %}
        </div>
    </div>

{% endblock body %}
