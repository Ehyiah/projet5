{% extends 'base.html.twig' %}

{% block title %}
    Création d'un nouvel utilisateur
{% endblock title %}

{% block body %}
    <div class="container">
        {% if not is_granted('ROLE_USER') %}
            <h1>Création d'un nouvel utilisateur</h1>
            <hr>

            {{ form_start(form) }}

            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">Créer nouvel utilisateur</button>
            <a class="btn btn-primary" href="{{ path('home') }}">Retour</a>

            {{ form_end(form) }}

        {% endif %}


        {% if is_granted('ROLE_USER') %}
        <p>Vous êtes déjà enregistré en tant qu'utilisateur</p>
            <a href="{{ path('home') }}">Accueil</a>
        {% endif %}

    </div>


{% endblock body %}