{% extends 'base.html.twig' %}


{% block title %}
    Création d'une nouvelle Bibliothèque
{% endblock %}


{% block body %}
    <div class="container">
        <h1>Création de votre nouvelle Bibliothèque</h1>
        <p>Formulaire de création de bibliothèque</p>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Ajouter une nouvelle collection</button>
        <a href="{{ path('home') }}" class="btn btn-primary">Annuler</a>

        {{ form_end(form) }}

        <div class="divider"></div>
    </div>


{% endblock %}
